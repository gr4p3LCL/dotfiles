	    "openweather.sh"
	    "powermenu"
	    "spotify.py"
	    "temperature"
	    "volume"
	    "vpn"
	    "arc_dark_colors.rasi"
	    "arc_dark_transparent_colors.rasi"
	    "powermenu.rasi"
	    "rofidmenu.rasi"
	    "termconfig"
	    "bash.zsh-theme"
	    "JetBrainsMono-Regular.ttf")

