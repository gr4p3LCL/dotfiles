package() {
  # Main
  mkdir -p "${pkgdir}/usr/bin"
  cp "${srcdir}/dotfiles-install.sh" "${pkgdir}/usr/bin/dotfiles-install"
  cp "${srcdir}/install-yay.sh" "${pkgdir}/usr/bin/install-yay"
  chmod +x "${pkgdir}/usr/bin/dotfiles-install"
  chmod +x "${pkgdir}/usr/bin/install-yay"

  # i3
  mkdir -p "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts"
  cp "${srcdir}/i3config" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/config"
  cp "${srcdir}/alternating_layouts.py" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/alternating_layouts.py"
  cp "${srcdir}/bandwidth2" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/bandwidth2"
  cp "${srcdir}/battery-pinebook-pro.sh" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/battery-pinebook-pro.sh"
  cp "${srcdir}/battery.sh" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/battery.sh"
  cp "${srcdir}/blur-lock.sh" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/blur-lock.sh"
  cp "${srcdir}/cpu_usage" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/cpu_usage"
  cp "${srcdir}/disk" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/disk"
  cp "${srcdir}/empty_workspace.sh" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/empty_workspace.sh"
  cp "${srcdir}/keyhint.sh" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/keyhint.sh"
  cp "${srcdir}/memory" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/memory"
  cp "${srcdir}/openweather.conf" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/openweather.conf"
  cp "${srcdir}/openweather.sh" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/openweather.sh"
  cp "${srcdir}/powermenu" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/powermenu"
  cp "${srcdir}/spotify.py" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/spotify.py"
  cp "${srcdir}/temperature" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/temperature"
  cp "${srcdir}/volume" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/volume"
  cp "${srcdir}/vpn" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/i3/scripts/vpn"

  # Rofi
  mkdir -p "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/rofi"
  cp "${srcdir}/arc_dark_colors.rasi" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/rofi/arc_dark_colors.rasi"
  cp "${srcdir}/arc_dark_transparent_colors.rasi" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/rofi/arc_dark_transparent_colors.rasi"
  cp "${srcdir}/powermenu.rasi" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/rofi/powermenu.rasi"
  cp "${srcdir}/rofidmenu.rasi" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/rofi/rofidmenu.rasi"

  # Terminator
  mkdir -p "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/terminator"
  cp "${srcdir}/termconfig" "${pkgdir}/etc/gr4p3LCL_dotfiles/.config/terminator/config"

  # Oh-My-ZSH
  mkdir -p "${pkgdir}/etc/gr4p3LCL_dotfiles/.oh-my-zsh/custom/themes"
  cp "${srcdir}/bash.zsh-theme" "${pkgdir}/etc/gr4p3LCL_dotfiles/.oh-my-zsh/custom/themes/bash.zsh-theme"


  # cp "${srcdir}/" "${pkgdir}/$HOME/"

}

